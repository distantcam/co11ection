{
  "name": "co11ection",
  "version": "1.0.0",
  "description": "A simple blog running off CollectedNotes.com",
  "scripts": {
    "start": "run-p start:*",
    "start:eleventy": "eleventy --serve",
    "start:postcss": "postcss src/assets/styles/*.css --dir _site --watch",
    "build": "run-s clean build:eleventy build:postcss",
    "build:eleventy": "cross-env ELEVENTY_PRODUCTION=true eleventy",
    "build:postcss": "cross-env NODE_ENV=production postcss src/assets/styles/*.css --dir _site",
    "clean": "rimraf _site"
  },
  "keywords": [
    "elenventy",
    "starter"
  ],
  "author": "Cam MacFarland",
  "license": "Unlicense",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.4",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "tailwindcss": "^3.4.4"
  }
}
